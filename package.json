{
  "name": "pgats-pokedex",
  "version": "1.0.0",
  "description": "API para gerenciamento de pokémons avistados na pokédex de aventureiros",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"npm run start:rest\" \"npm run start:graphql\"",
    "start:rest": "node server.js",
    "start:graphql": "node graphql/server.js",
    "test:controller-rest": "mocha test/rest/controller/*.test.js --timeout 10000",
    "test:external-rest": "mocha test/rest/external/*.test.js --timeout 10000",
    "test:external-graphql": "mocha test/graphql/external/*.test.js --timeout 10000"
  },
  "keywords": [
    "pokedex",
    "api",
    "express",
    "swagger"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "chai": "^4.5.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^10.0.0",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^11.7.1",
    "sinon": "^21.0.0",
    "supertest": "^7.1.4",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  }
}
